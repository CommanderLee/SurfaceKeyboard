<s:SurfaceWindow x:Class="SurfaceKeyboard.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="SurfaceKeyboard"
    >
    <Canvas Background="LightBlue" 
            Width="1500" 
            Height="800" 
            TouchDown="Canvas_TouchDown"
            MouseLeftButtonDown="Canvas_MouseLeftButtonDown">
        
        <TextBlock Name="StatusTextBlk" 
                   Width="300" 
                   Height="80"/>

        <TextBlock Name="TaskTextBlk" 
                   Canvas.Left="342"
                   Canvas.Top="0"
                   Width="750"
                   Height="80"
                   FontSize="30" />
        
        <Button Name="NextBtn"
                Width="150"
                Height="80"
                Canvas.Left="1150"
                Canvas.Top="0"
                FontSize="40"
                TouchDown="NextBtn_TouchDown"
                Click="NextBtn_Click">Next</Button>
        
        <Button Name="SaveBtn" 
                Width="150" 
                Height="80" 
                Canvas.Left="1350" 
                Canvas.Top="0"
                FontSize="40"
                TouchDown="SaveBtn_TouchDown"
                Click="SaveBtn_Click">Save</Button>
        

        
    </Canvas>
</s:SurfaceWindow>
