<s:SurfaceWindow x:Class="SurfaceKeyboard.SurfaceWindow1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    Title="SurfaceKeyboard"
    >
    <DockPanel LastChildFill="True"
               Width="1500"
               Height="800">
        <Border Height="80"
                Background="LightBlue"
                BorderBrush="WhiteSmoke"
                BorderThickness="2"
                DockPanel.Dock="Top">
            <Canvas Name="MenuCanvas">
                <TextBlock Name="StatusTextBlk"
                   Canvas.Left="0"
                   Canvas.Top="0"
                   Width="300" 
                   Height="80"
                   FontSize="15">Touch anywhere to start</TextBlock>

                <TextBlock Name="TaskTextBlk" 
                   Canvas.Left="320"
                   Canvas.Top="0"
                   Width="850"
                   Height="80"
                   FontFamily="Courier New"
                   FontSize="30" />

                <Button Name="NextBtn"
                Width="150"
                Height="75"
                Canvas.Left="1190"
                Canvas.Top="0"
                FontSize="40"
                BorderThickness="2"
                TouchDown="NextBtn_TouchDown"
                Click="NextBtn_Click">Next</Button>

                <Button Name="SaveBtn" 
                Width="150" 
                Height="75" 
                Canvas.Left="1345" 
                Canvas.Top="0"
                FontSize="40"
                BorderThickness="2"
                TouchDown="SaveBtn_TouchDown"
                Click="SaveBtn_Click">Save</Button>
            </Canvas>    
        </Border>
        
        <Border BorderBrush="WhiteSmoke"
                BorderThickness="2">
            <Canvas Name="InputCanvas"
                    Background="AliceBlue"
                    TouchDown="InputCanvas_TouchDown"
                    MouseLeftButtonDown="InputCanvas_MouseLeftButtonDown">
            </Canvas>
        </Border>
                
    </DockPanel>

</s:SurfaceWindow>
